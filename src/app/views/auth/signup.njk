{% extends "_layouts/auth.njk" %}

{% block body %}
       <form action="/signup" method="post" enctype="multipart/form-data">
        <label for="avatar">
          <img src="/images/avatar.svg" height="24">
        </label>

        <input id="avatar" name="avatar" type="file">

        <input name="name" placeholder="Nome completo" type="text">

        <input name="email" placeholder="Seu e-mail" type="email">

        <input name="password" placeholder="Senha secreta" type="password">

        <label for="provider">
          <input type="checkbox" name="provider" id="provider" value="1">
            Sou cabelereiro
        </label>

        <button type="submit">
          Criar conta
        </button>

        <a href="/">JÃ¡ possuo conta</a>
       </form>

       <script type="text/javascript">
        var avatarInput = document.getElementById('avatar')
        var img = document.querySelector('label[for=avatar] img')

        avatarInput.onchange = function (e) {
          img.classList.add('preview')
          img.src = URL.createObjectURL(e.target.files[0])
        }
       </script>
{% endblock %}
